<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:background="@color/ask_detail_itme_bg"
    android:paddingTop="20dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">
    <include 
        android:id="@+id/time_tv"
        layout="@layout/time_layout"/>
    <com.aframe.ui.widget.MaterialRippleLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/time_tv"
    	app:mrl_rippleDelayClick="true"
        app:mrl_rippleInAdapter="true"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleHover="true"
        app:mrl_rippleColor="@color/theme_window_background_click"
        app:mrl_rippleAlpha="0.6">
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:paddingTop="15dp"
	        android:paddingBottom="20dp"
	        android:background="@drawable/ask_from_bg">
	        <com.aframe.ui.widget.CircleImageView
	            android:id="@+id/head_img"
	            android:layout_width="@dimen/ask_head_width"
	            android:layout_height="@dimen/ask_head_height"
	            android:src="@drawable/head_default"
	             />
	        <TextView 
	            android:id="@+id/name_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/head_img"
	            android:layout_marginLeft="10dp"
	            android:layout_marginTop="4dp"
	            android:textColor="@color/text_grey_color"
	            android:textSize="@dimen/tv_style_big_size"
	            android:gravity="center_vertical"
	            android:text="我"/>
	        <TextView 
	            android:id="@+id/count_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="4dp"
	            android:layout_alignParentRight="true"
	            android:layout_marginLeft="5dp"
	            android:textColor="@color/text_grey_color"
	            android:textSize="@dimen/tv_style_big_size"
	            android:gravity="center_vertical"
	            android:text="9"/>
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="9dp"
	            android:layout_toLeftOf="@id/count_tv"
	            android:src="@drawable/ask_answer_count"/>
	        <TextView 
	            android:id="@+id/content_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_dark_color"
	            android:textSize="@dimen/tv_style_big_size"
	            android:layout_below="@id/name_tv"
	            android:layout_toRightOf="@id/head_img"
	            android:layout_marginTop="10dp"
	            android:text="我叫我u偶偶网 搜否饿哦的酒窝刀片的金佛脾气的撒榴弹炮的富婆祈福丿派发的举动is"/>
	    </RelativeLayout>
	</com.aframe.ui.widget.MaterialRippleLayout>
</RelativeLayout>