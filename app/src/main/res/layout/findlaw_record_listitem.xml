<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include layout="@layout/h_line"/>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/activity_horizontal_margin"
	    android:orientation="vertical"
	    android:background="@drawable/dialog_btn_selector" >
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        <ImageView
	            android:id="@+id/findlaw_record_head_img"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:contentDescription="@string/law"
	            android:src="@drawable/head_default"/>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginLeft="5dp">
	            <TextView 
		            android:id="@+id/findlaw_record_name_tv"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/tv_style_big_size"
	        		android:textColor="@color/text_dark_color"/>
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="@dimen/tv_style_smal_size"
	        		android:textColor="@color/text_dark_color"
		            android:text="@string/law"/>
	        </LinearLayout>
	        
	    </LinearLayout>
	    <TextView 
	        android:id="@+id/findlaw_record_content_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:maxLines="2"
	        android:textSize="@dimen/tv_style_smal_size"
	        android:textColor="@color/text_dark_color"/>
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp">
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="@dimen/tv_style_smal_size"
	        		android:textColor="@color/text_light_color"
			        android:text="@string/findlaw_record_type"/>
	            <TextView 
	                android:id="@+id/findlaw_record_type_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="@dimen/tv_style_smal_size"
	        		android:textColor="@color/text_light_color"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_alignParentRight="true">
	            <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="@dimen/tv_style_smal_size"
	        		android:textColor="@color/text_light_color"
			        android:text="@string/findlaw_record_amount"/>
	            <TextView 
	                android:id="@+id/findlaw_record_amount_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="@dimen/tv_style_smal_size"
	        		android:textColor="@color/text_light_color"/>
	        </LinearLayout>
		</RelativeLayout>
		<include layout="@layout/h_line"/>
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    <TextView 
		        android:id="@+id/findlaw_record_lawdetail_tv"
			    android:layout_width="wrap_content"
			    android:layout_height="30dp"
			    android:layout_alignParentRight="true"
			    android:layout_marginTop="5dp"
			    android:paddingLeft="10dp"
			    android:paddingRight="10dp"
			    android:background="@drawable/green_button_selector"
			    android:textSize="@dimen/tv_style_smal_size"
			    android:textColor="@color/green_button_text_color"
			    android:text="@string/findlaw_record_lawdetail"
			    android:gravity="center"/>
		</RelativeLayout>
	</LinearLayout>
	<include layout="@layout/h_line"/>
</LinearLayout>