<?xml version="1.0" encoding="utf-8"?>
<com.aframe.ui.widget.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    ripple:mrl_rippleDelayClick="true"
    ripple:mrl_rippleInAdapter="true"
    ripple:mrl_rippleColor="@color/theme_window_background_click"
    ripple:mrl_rippleAlpha="0.6">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" >
    <com.aframe.ui.widget.CircleImageView
        android:id="@+id/findlaw_head_img"
        android:layout_width="@dimen/head_width"
        android:layout_height="@dimen/head_height"
        android:padding="@dimen/activity_horizontal_margin"
        android:src="@drawable/head_default"/>
    <LinearLayout 
        android:id="@+id/findlaw_name_lt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/findlaw_head_img"
	    android:paddingLeft="5dp"
	    android:orientation="horizontal">
        <TextView 
		    android:id="@+id/finlaw_name_tv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/text_dark_color"
			android:textSize="@dimen/tv_style_big_size"
		    android:text="律师"/>
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/text_light_color"
			android:textSize="@dimen/tv_style_mini_size"
		    android:text="@string/law"/>
		<TextView 
		    android:id="@+id/findlaw_area_tv"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="right|bottom"
		    android:layout_marginRight="5dip"
		    android:textColor="@color/text_light_color"
			android:textSize="@dimen/tv_style_mini_size"
		    android:text="律师"/>
    </LinearLayout>
	
	
	<TextView 
	    android:id="@+id/findlaw_room_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="5dp"
	    android:layout_below="@id/findlaw_name_lt"
	    android:layout_toRightOf="@id/findlaw_head_img"
	    android:text=";asljdfasl;kdjgsa;ldgjk"
	    android:textColor="@color/text_grey_color"
		android:textSize="@dimen/tv_style_smal_size"/>
	
<!-- 		<View  -->
<!-- 		    android:layout_width="fill_parent" -->
<!-- 		    android:layout_height="@dimen/space_line_size"  -->
<!-- 		    android:background="@color/space_line_color" -->
<!-- 		    android:layout_below="@id/findlaw_head_img"/> -->
		
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    android:paddingLeft="5dp"
	    android:layout_toRightOf="@id/findlaw_head_img"
	    android:layout_below="@id/findlaw_room_tv">
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/text_light_color"
			android:textSize="@dimen/tv_style_mini_size"
		    android:text="@string/find_law_lawspecial"/>
	    
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/text_light_color"
			android:textSize="@dimen/tv_style_mini_size"
		    android:id="@+id/profession1"
		    android:paddingLeft="5dip"/>
	    
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/text_light_color"
			android:textSize="@dimen/tv_style_mini_size"
		    android:id="@+id/profession2"
		    android:paddingLeft="10dip"/>
	    
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/text_light_color"
			android:textSize="@dimen/tv_style_mini_size"
		    android:id="@+id/profession3"
		    android:paddingLeft="10dip"/>
	</LinearLayout>
</RelativeLayout>
</com.aframe.ui.widget.MaterialRippleLayout>