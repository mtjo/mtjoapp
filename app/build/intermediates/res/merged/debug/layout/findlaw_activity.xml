<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText 
            android:id="@+id/findlaw_content_et"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:maxLength="500"
            android:hint="@string/find_law_input_hit"/>
        <EditText
            android:id="@+id/findlaw_amount_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:hint="@string/find_law_amount_hit"
            android:inputType="numberDecimal"
            android:maxLength="7"/>
        <TextView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="right"
               android:layout_marginRight="10dp"
               android:layout_marginTop="5dp"
               android:text="@string/find_law_amount_unit"
               android:textColor="@color/text_light_color"
               android:textSize="@dimen/tv_style_mini_size"/>
        <Button 
            android:id="@+id/findlaw_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:onClick="submit"
            android:text="@string/find_law_submit"/>
    </LinearLayout>
</ScrollView>