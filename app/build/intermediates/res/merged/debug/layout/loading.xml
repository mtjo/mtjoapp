<?xml version="1.0" encoding="utf-8"?>
<net.mtjo.app.ui.LoadStateView xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/loadingStateBox"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="#ffffff" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">
        <ProgressBar 
            android:id="@+id/loading_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myProgressBarStyleLarge"/>
        <ImageView
            android:id="@+id/loaderor_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView 
            android:id="@+id/load_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_grey_color"
            android:textSize="@dimen/tv_style_smal_size"
            android:text="正在加载中，请稍后..."/>
        <Button 
            android:id="@+id/retry_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="重新加载"
            android:visibility="gone"/>
    </LinearLayout>
</net.mtjo.app.ui.LoadStateView>
