<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/activity_horizontal_margin"
      android:onClick="lawDetail">
      <ImageView 
          android:id="@+id/findlaw_head_img"
          android:layout_width="@dimen/head_width"
          android:layout_height="@dimen/head_height"
          android:layout_centerVertical="true"/>
      <ImageView 
          android:id="@+id/img2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/go_more"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"/>
      <LinearLayout 
          android:id="@+id/lt1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:layout_toRightOf="@id/findlaw_head_img"
          android:layout_toLeftOf="@id/img2">
          <TextView 
              android:id="@+id/findlaw_name_tv"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:textColor="@color/text_dark_color"
	          android:textSize="@dimen/tv_style_big_size"/>
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/text_light_color"
	       android:textSize="@dimen/tv_style_mini_size"
           android:text="@string/law"/>
       <TextView 
           android:id="@+id/findlaw_room_tv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/text_light_color"
	       android:textSize="@dimen/tv_style_mini_size"
           android:singleLine="true"
           android:gravity="right"/>
      </LinearLayout>
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="5dp"
          android:layout_toRightOf="@id/findlaw_head_img"
          android:layout_toLeftOf="@id/img2"
          android:layout_below="@id/lt1">
          <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/text_dark_color"
           android:textSize="@dimen/tv_style_smal_size"
           android:drawableLeft="@drawable/law_good"
           android:drawablePadding="5dp"
           android:text="@string/find_law_good"/>
          <TextView 
              android:id="@+id/findlaw_good_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#ff0000"
           android:textSize="@dimen/tv_style_smal_size"/>
      </LinearLayout>
  </RelativeLayout>
        <include layout="@layout/h_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="@color/text_dark_color"
	       		android:textSize="@dimen/tv_style_big_size"
                android:text="@string/findlaw_record_casedetail"/>
            <include layout="@layout/h_line"/>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingBottom="10dp"
                 android:textColor="@color/text_grey_color"
	       		 android:textSize="@dimen/tv_style_smal_size"
                 android:text="@string/findlaw_record_casetype"/>
                <TextView 
                     android:id="@+id/findlaw_type_tv"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:paddingBottom="10dp"
	                 android:textColor="@color/text_grey_color"
	       		 	 android:textSize="@dimen/tv_style_smal_size"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingBottom="10dp"
                 android:textColor="@color/text_grey_color"
	       		 android:textSize="@dimen/tv_style_smal_size"
                 android:text="@string/findlaw_record_casearea"/>
                <TextView 
                    android:id="@+id/findlaw_area_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingBottom="10dp"
                 android:textColor="@color/text_grey_color"
	       		 android:textSize="@dimen/tv_style_smal_size"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingBottom="10dp"
                 android:textColor="@color/text_grey_color"
	       		 android:textSize="@dimen/tv_style_smal_size"
                 android:text="@string/findlaw_record_caseamount"/>
                <TextView 
                    android:id="@+id/findlaw_amount_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingBottom="10dp"
                 android:textColor="@color/text_grey_color"
	       		 android:textSize="@dimen/tv_style_smal_size"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingBottom="10dp"
                 android:textColor="@color/text_grey_color"
	       		 android:textSize="@dimen/tv_style_smal_size"
                 android:text="@string/findlaw_record_caseremark"/>
                <TextView 
                     android:id="@+id/findlaw_remark_tv"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:paddingBottom="10dp"
	                 android:textColor="@color/text_grey_color"
		       		 android:textSize="@dimen/tv_style_smal_size"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
